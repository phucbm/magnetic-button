    "@types/node": "^24.0.3",
    "jest": "^30.0.3",
    "jest-environment-jsdom": "^30.0.2",
    "lodash": "^4.17.21",
    "ts-jest": "^29.4.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.5"
  },
  "dependencies": {
    "@phucbm/lerp": "^1.0.1"
